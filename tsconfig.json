{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "rootDir": "./src",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "./src",
    "./vitest.config.ts",
    "./src/templates/reportTemplate.ts",
    "./src/templates/utils.ts",
    "./src/types.ts"
  ],
  "exclude": ["./dist", "./node_modules", "./__tests__", "./coverage"]
}
